@model LoginModel
<h6 class="display-4 text-light">Login</h6>
<hr />
<form asp-controller="Account" asp-action="Login" method="post">
    <div class="row">
        <div class="col-md-8">
            <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group row mb-2">
                    <div class="col-sm-3">
                        <label asp-for="UserName" class="col-form-label text-light"></label>
                    </div>
                    <div class="col-sm-9">
                        <input asp-for="UserName" type="text" class="form-control" />
                    </div>
                </div>

                <div class="form-group row mb-2">
                    <div class="col-sm-3">
                        <label asp-for="Password" class="col-form-label text-light"></label>
                    </div>
                    <div class="col-sm-9">
                        <input asp-for="Password" type="text" class="form-control" />
                    </div>
                </div>

                <div class="form-group row mb-2">
                    <div class="col-sm-9 offset-sm-3">
                        <button class="btn btn-light">Login</button>
                        <a href="#" class="btn btn-link text-light">Forgot Password</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
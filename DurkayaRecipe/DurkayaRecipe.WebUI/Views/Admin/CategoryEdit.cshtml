@model CategoryModel
<h5 style="color: #bdc3c7" class="display-4">Edit Category</h5>
<hr />
<form asp-controller="Admin" asp-action="CategoryEdit" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-8">
            <div class="form-group row mb-2">
                <label style="color: #bdc3c7" class="col-form-label col-sm-3">Category Name:</label>
                <div class="col-sm-9">
                    <input type="text" asp-for="CategoryName" class="form-control" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row mb-2">
                <label style="color: #bdc3c7" class="col-form-label col-sm-3">Category Description:</label>
                <div class="col-sm-9">
                    <input type="text" asp-for="CategoryDescription" class="form-control" />
                    <span asp-validation-for="CategoryDescription" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row mb-2">
                <input type="hidden" name="CategoryId" value="@Model.CategoryId" />
                <div class="col-sm-9">
                    <button style="background-color: #bdc3c7" type="submit" class="btn">Save Category</button>
                </div>
            </div>
        </div>
    </div>
    <a style="background-color: #bdc3c7" href="~/Admin/CategoryList" class="btn btn-sm mb-1">Back</a>
</form>
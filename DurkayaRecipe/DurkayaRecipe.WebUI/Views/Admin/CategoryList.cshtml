@model List<Category>

<div class="row">
    <div class="col-md-12">
        <h6 style="color: #bdc3c7" class="display-4">Admin Category Managament</h6>
        <hr />
        <a style="background-color: #bdc3c7" href="/admin/categories/create" class="btn btn-sm mb-1">Create Category</a>

        <table style="background-color: #bdc3c7" class="table table-bordered">
            <thead>
                <tr>
                    <th witdh="30">ID</th>
                    <th>Name</th>
                    <th witdh="30">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count > 0)
                {
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>@category.CategoryId</td>
                            <td>@category.CategoryName</td>
                            <td>
                                <a href="/admin/categories/@category.CategoryId" class="btn btn-sm btn-primary mr-1">Edit</a>
                                <form action="/admin/CategoryDelete" method="post" class="d-inline">
                                    <input type="hidden" name="CategoryId" value="@category.CategoryId" />
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    //ürün yoksa
                }
            </tbody>
        </table>
    </div>
</div>

@model FoodModel
<h5 style="color: #bdc3c7" class="display-4">Create Food</h5>
<hr />
<form asp-controller="Admin" asp-action="FoodCreate" enctype="multipart/form-data" method="post">
    <div class="row">
        <div class="col-md-8">
            <div class="form-group row mb-2">
                <label style="color: #bdc3c7" class="col-form-label col-sm-3">Food Name:</label>
                <div class="col-sm-9">
                    <input style="background-color: #bdc3c7" type="text" asp-for="FoodName" />
                    <span asp-validation-for="FoodName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-2">
                <label style="color: #bdc3c7" class="col-form-label col-sm-3">Food Material:</label>
                <div class="col-sm-9">
                    <input style="background-color: #bdc3c7" type="text" asp-for="FoodMaterial" />
                    <span asp-validation-for="FoodMaterial" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-2">
                <label style="color: #bdc3c7" class="col-form-label col-sm-3">Image:</label>
                <div class="col-sm-9">
                    <input style="color: #bdc3c7" type="file" name="file" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-2">
                <label style="color: #bdc3c7" class="col-form-label col-sm-3">Food Description:</label>
                <div class="col-sm-9">
                    <input style="background-color: #bdc3c7" type="text" asp-for="FoodDescription" />
                    <span asp-validation-for="FoodDescription" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-2">
                <div class="col-sm-9">
                    <button style="background-color: #bdc3c7" type="submit" class="btn">Save Food</button>
                </div>
            </div>
        </div>
        <div class="col-md-4">

            @foreach (var item in (List<Category>)ViewBag.Categories)
            {
                <div style="color: #bdc3c7" class="form-check">
                    <input style="background-color: #bdc3c7" type="checkbox" class="form-check-input" value="@item.CategoryId" name="categoryIds" id="category_@item.CategoryId" />
                    <label class="form-check-label">@item.CategoryName</label>
                </div>
            }

            <hr />
            <div class="form-check">
                <input style="background-color: #bdc3c7" type="checkbox" asp-for="IsApproved" class="form-check-input" />
                <label style="color: #bdc3c7" class="form-check-label">Is Approved?</label>
            </div>

            <div class="form-check">
                <input style="background-color: #bdc3c7" type="checkbox" asp-for="IsHome" class="form-check-input" />
                <label style="color: #bdc3c7" class="form-check-label">Is Home?</label>
            </div>
        </div>
    </div>
    <a style="background-color: #bdc3c7" href="~/Admin/FoodList" class="btn btn-sm mb-1">Back</a>
</form>
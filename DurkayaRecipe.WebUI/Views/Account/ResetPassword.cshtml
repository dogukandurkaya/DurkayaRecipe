@model ResetPasswordModel
<h6 style="color: #bdc3c7" class="display-4">Reset Password</h6>
<hr />
<form asp-controller="Account" asp-action="ResetPassword" method="post">
    <div class="row">
        <div class="col-md-6">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Token" />
            <div class="form-group row mb-2">
                <div class="col-sm-3">
                    <label style="color: #bdc3c7" class="col-form-label">Email:</label>
                </div>
                <div class="col-sm-9">
                    <input style="background-color: #bdc3c7" asp-for="Email" type="text" class="form-control" />
                </div>
            </div>

            <div class="form-group row mb-2">
                <div class="col-sm-3">
                    <label style="color: #bdc3c7" class="col-form-label">Password:</label>
                </div>
                <div class="col-sm-9">
                    <input style="background-color: #bdc3c7" asp-for="Password" type="password" class="form-control" />
                </div>
            </div>

            <div class="form-group row mb-2">
                <div class="col-sm-9 offset-sm-3">
                    <button style="background-color: #bdc3c7" type="submit" class="btn">Reset</button>

                </div>
            </div>

        </div>
    </div>
</form>